<Window x:Class="integrateur.ActionsAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:integrateur"
        mc:Ignorable="d"
        Title="Admin" Height="300" Width="300">
    <Grid>
        <Label x:Name="Lab_header" Content="Prélever un solde" HorizontalAlignment="Left" Margin="51,20,0,0" VerticalAlignment="Top" Width="180"/>
        <ComboBox x:Name="Cmb_compteHypotecaire" HorizontalAlignment="Left" Margin="51,110,0,0" VerticalAlignment="Top" Width="180" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" DisplayMemberPath="nom_userMontant"/>
        <TextBox x:Name="Txb_montant" HorizontalAlignment="Left" Height="23" Margin="51,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btn_confirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="100,169,0,0" VerticalAlignment="Top" Width="80" Click="btn_confirmer_Click"/>
        <Label Content="$" HorizontalAlignment="Left" Margin="215,82,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Lab_balance" Content="" HorizontalAlignment="Left" Margin="51,51,0,0" VerticalAlignment="Top" Width="180" Visibility="Collapsed"/>
    </Grid>
</Window>
